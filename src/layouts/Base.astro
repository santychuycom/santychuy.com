---
import '@styles/reset.css';
import '@styles/vars.css';
import '@styles/globals.css';
import '@styles/animations.css';

import { ViewTransitions } from 'astro:transitions';

import Background from '@components/Background.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';

interface Props {
  title?: string;
  description: string;
  url: string;
  noIndex?: boolean;
}

const { title, description, url, noIndex } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/fonts/Satoshi-Regular.woff2"
      crossorigin
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/fonts/Satoshi-Medium.woff2"
      crossorigin
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/fonts/Satoshi-Bold.woff2"
      crossorigin
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      {
        title
          ? `${title} - Santiago Carrasco (Santychuy)`
          : 'Santiago Carrasco (Santychuy)'
      }
    </title>
    {noIndex && <meta name="robots" content="noindex" />}
    <ViewTransitions />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta
      property="og:image"
      content="https://santychuy.com/og-santychuy.png"
    />
    <meta property="og:site_name" content="Santiago Carrasco (Santychuy)" />
    <meta property="og:locale" content="en_US" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@santychuy" />
    <meta name="twitter:creator" content="@santychuy" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://santychuy.com/og-santychuy.png"
    />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <Background />
    <style>
      main {
        display: flex;
        flex-direction: column;
        flex: 1;
        padding-block: 120px;
        gap: 10rem;

        @media screen and (min-width: 68.75rem) {
          padding-inline: 4rem;
        }
      }
    </style>
  </body>
</html>
