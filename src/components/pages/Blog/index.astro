---
import Badge from '@components/Badge.astro';
import type { Post } from '@schemas/post';

interface Props {
  post: Post;
  slug: string;
}

const { post, slug } = Astro.props;

const res = await fetch(
  `https://plausible.io/api/v1/stats/aggregate?site_id=${import.meta.env.PLAUSIBLE_SITE_ID}&date=2024-01-01,9999-01-01&filters=event:page%3D%3D%2Fblog%2F${slug}%2F&period=custom`,
  {
    headers: {
      Authorization: `Bearer ${import.meta.env.PLAUSIBLE_TOKEN}`,
    },
  }
);

const data = await res.json();
const views = data.results?.visitors.value;

console.log(views);

const title = post.title;
const pubDate = post.pubDate;
---

