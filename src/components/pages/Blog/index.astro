      <h1 class="title">{title}</h1>
      <p class="date"></p>

      <div class="info-container">
        <div class="author-container">
          <img
            src={post.author.img}
            alt={`${post.author.name} profile`}
            class="author-img"
          />
          <p class="author-name">{post.author.name}</p>
