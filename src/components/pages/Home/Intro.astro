---
import { Image } from 'astro:assets';

import ArrowDown from '@components/icons/arrow-down.astro';
---

<section>
  <Image
    src="https://avatars.githubusercontent.com/u/28853786?v=4"
    alt="Santychuy Image"
    width="150"
    height="150"
    class="img-avatar"
  />
  <h1>Santiago Carrasco</h1>
  <h2>Software Engineer from Hermosillo, MX</h2>
  <a href="#latest-posts" title="Latest Post">
    <button
      >Read articles
      <ArrowDown class="icon-arrow" />
    </button>
  </a>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .img-avatar {
    border-radius: 50%;
    border: 8px solid hsla(210, 53%, 6%, 40);
    opacity: 0.6;
    transition: opacity 0.1s ease-in-out;

    &:hover {
      opacity: 1;
    }
  }

  h1 {
    font-size: clamp(3rem, 2.8199rem + 0.9938vw, 5rem);
    line-height: 1.3;
    margin-block-start: 28px;
    margin-block-end: 8px;
    background: linear-gradient(70deg, #1a2e84 0%, #9cd89f 80%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 300%;
    background-clip: text;
    animation: waving 5s ease-in-out infinite;
  }

  a {
    &:hover {
      color: inherit;
    }
  }

  button {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    margin-block-start: 40px;
    font-family: 'Satoshi Bold';
    color: var(--neutral---black--1);
    border: none;
    padding-inline: 20px;
    padding-block: 10px;
    border-radius: 8px;
    box-shadow: 0px 3px 55px 0px rgba(89, 112, 209, 0.8);
    background-image: linear-gradient(
      60deg,
      hsl(229deg 93% 42%) 0%,
      hsl(227deg 85% 43%) 8%,
      hsl(226deg 78% 44%) 15%,
      hsl(224deg 70% 45%) 23%,
      hsl(221deg 68% 44%) 31%,
      hsl(217deg 67% 42%) 38%,
      hsl(213deg 66% 40%) 46%,
      hsl(210deg 59% 43%) 54%,
      hsl(211deg 46% 49%) 62%,
      hsl(211deg 34% 55%) 69%,
      hsl(209deg 24% 60%) 77%,
      hsl(201deg 24% 61%) 85%,
      hsl(192deg 23% 62%) 92%,
      hsl(184deg 24% 63%) 100%
    );
    cursor: pointer;

    &:hover .icon-arrow {
      animation: bounce 0.5s ease-in-out;
    }
  }
</style>
