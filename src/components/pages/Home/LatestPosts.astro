---
import { getCollection } from 'astro:content';

import Newsletter from '@components/Newsletter.astro';
import PreviewPost from '@components/PreviewPost.astro';

const allPosts = await getCollection('posts');
const sortedDatePosts = allPosts?.sort(
  (a, b) => Number(new Date(b.data.pubDate)) - Number(new Date(a.data.pubDate))
);
---

<section class="content">
  <div class="posts-container">
    <h2 class="subtitle-section" id="latest-posts">Latest Posts</h2>

    {
      sortedDatePosts ? (
        sortedDatePosts.map(({ data, slug }, i) => {
          if (i < 5) {
            return (
              <PreviewPost
                title={data.title}
                description={data.description}
                date={data.pubDate}
                topics={data.tags}
                slug={slug}
              />
            );
          }
        })
      ) : (
        <h3 class="no-posts">No posts yet...</h3>
      )
    }
  </div>

  <aside class="newsletter-aside">
    <h3 class="name">Santiago Carrasco</h3>
    <Newsletter />
  </aside>
</section>

<style>
  .content {
    display: flex;
    flex-direction: column;
    gap: 7rem;
    position: relative;

    @media screen and (min-width: 68.75rem) {
      flex-direction: row;
      gap: 3rem;
    }
  }

  .posts-container {
    display: flex;
    flex-direction: column;
    gap: 5rem;

    .subtitle-section {
      color: var(--primary---green--6);
    }

    .no-posts {
      font-size: clamp(1.5rem, 2vw, 2rem);
    }

    @media screen and (min-width: 68.75rem) {
      flex-shrink: 999;
      width: 50vw;
      max-width: 720px;
    }
  }

  .newsletter-aside {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    height: fit-content;

    @media screen and (min-width: 68.75rem) {
      position: sticky;
      top: 15%;
    }

    .name {
      font-size: 2rem;
      line-height: 1.3;
      background: linear-gradient(70deg, #1a2e84 0%, #9cd89f 80%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
  }
</style>
