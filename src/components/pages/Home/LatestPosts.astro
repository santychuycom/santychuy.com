---
import PreviewPost from '@components/PreviewPost.astro';
import Newsletter from '@components/Newsletter.astro';
---

<section class="content">
  <div class="posts-container">
    <h2 class="title-section" id="latest-posts">Latest Posts</h2>

    <PreviewPost
      title="Error Boundaries on React"
      description="Error boundaries are React components that catch JavaScript errors anywhere in their child component tree, log those errors, and display a fallback UI instead of the component tree that crashed."
      date="09/10/2023"
      topics={['react', 'typescript']}
    />
    <PreviewPost
      title="Error Boundaries on React"
      description="Error boundaries are React components that catch JavaScript errors anywhere in their child component tree, log those errors, and display a fallback UI instead of the component tree that crashed."
      date="09/10/2023"
      topics={['react', 'typescript']}
    />
    <PreviewPost
      title="Error Boundaries on React"
      description="Error boundaries are React components that catch JavaScript errors anywhere in their child component tree, log those errors, and display a fallback UI instead of the component tree that crashed."
      date="09/10/2023"
      topics={['react', 'typescript']}
    />
    <PreviewPost
      title="Error Boundaries on React"
      description="Error boundaries are React components that catch JavaScript errors anywhere in their child component tree, log those errors, and display a fallback UI instead of the component tree that crashed."
      date="09/10/2023"
      topics={['react', 'typescript']}
    />
  </div>

  <aside class="newsletter-aside">
    <h3 class="name">Santiago Carrasco</h3>
    <Newsletter />
  </aside>
</section>

<style>
  .title-section {
    color: var(--primary---green--6);
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 5rem;
    position: relative;

    @media screen and (min-width: 68.75rem) {
      flex-direction: row;
      gap: 3rem;
    }
  }

  .posts-container {
    display: flex;
    flex-direction: column;
    gap: 5rem;
    flex: 0 999 100%;

    @media screen and (min-width: 68.75rem) {
      max-width: 720px;
      margin-right: auto;
    }
  }

  .newsletter-aside {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    height: fit-content;

    @media screen and (min-width: 68.75rem) {
      position: sticky;
      top: 15%;
    }

    .name {
      font-size: 2rem;
      line-height: 1.3;
      background: linear-gradient(70deg, #1a2e84 0%, #9cd89f 80%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
  }
</style>
