<style>
  .title-section {
    color: var(--primary---green--6);
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 5rem;
    position: relative;

    @media screen and (min-width: 68.75rem) {
      flex-direction: row;
      gap: 3rem;
    }
  }

  .posts-container {
    display: flex;
    flex-direction: column;
    gap: 5rem;
    flex: 0 999 100%;

    @media screen and (min-width: 68.75rem) {
      max-width: 720px;
      margin-right: auto;
    }

    .post {
      display: flex;
      flex-direction: column;

      .date {
        color: var(--neutrals---black--7);
        margin-block-start: 4px;
      }

      .description {
        font-family: 'Satoshi Medium';
        margin-block: 12px;
      }

      .badges-container {
        display: flex;
        align-items: center;
        font-family: 'Satoshi Bold';
        gap: 0.8rem;
      }

      .badge {
        background-color: var(--primary---green--6--alpha);
        border-radius: 20px;
        padding-block: 8px;
        padding-inline: 12px;
      }

      .read-button {
        color: var(--neutrals---black--1);
        cursor: pointer;
        font-family: 'Satoshi Bold';
        background-color: transparent;
        border: none;
        display: flex;
        flex-direction: row;
        gap: 4px;
        align-items: center;
        max-width: 160px;
        margin-block-start: 24px;

        .read-arrow {
          rotate: 225deg;
          transition: transform 0.2s ease;
        }

        &:hover .read-arrow {
          transform: translateY(4px);
        }
      }
    }
  }

  .newsletter-aside {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    height: fit-content;

    @media screen and (min-width: 68.75rem) {
      position: sticky;
      top: 40px;
    }

    .profile {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;

      .img-avatar {
        border-radius: 50%;
        border: 8px solid hsla(210, 53%, 6%, 40);
        opacity: 0.6;
        transition: opacity 0.1s ease-in-out;

        &:hover {
          opacity: 1;
        }
      }

      .name {
        font-size: 2rem;
        line-height: 1.3;
        background: linear-gradient(70deg, #1a2e84 0%, #9cd89f 80%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }
    }

    .newsletter {
      background-color: var(--primary---green--6--alpha--2);
      display: flex;
      flex-direction: column;
      gap: 32px;
      border-radius: 0.8rem;
      max-width: 320px;
      text-align: center;
      align-items: center;
      padding-block: 40px;
      padding-inline: 20px;

      form {
        display: flex;
        gap: 8px;
        width: 100%;
      }
    }
  }
</style>
