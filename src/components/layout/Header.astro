---
import { Image } from 'astro:assets';

import DiscordIcon from '../../assets/icons/discord.svg';
import GithubIcon from '../../assets/icons/github.svg';
import SantychuyIcon from '../../assets/icons/santychuyISO.svg';
---

<header>
  <a href="/" class="logo-link">
    <Image src={SantychuyIcon} alt="Santychuy Icon" class="logo" width="65" />
  </a>

  <a href="/about/">About</a>
  <a href="/blog/">Blog</a>
  <span></span>
  <a href="https://discord.gg/5qjwJwq" target="_blank" rel="noopener">
    <Image src={DiscordIcon} alt="Discord Icon" width="30" />
  </a>
  <a href="https://github.com/santychuy" target="_blank" rel="noopener">
    <Image src={GithubIcon} alt="Github Icon" width="30" />
  </a>
</header>

<style>
  header {
    display: flex;
    height: 90px;
    align-items: center;
    gap: 1.2rem;
    padding: 0 1rem;

    @media screen and (min-width: 34.375rem) {
      gap: 2rem;
    }
  }

  .logo-link {
    margin-right: auto;
  }

  span {
    width: 1px;
    height: 30%;
    background-color: var(--primary---green--10);
  }
</style>
